{
  "name": "pikchain",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "concurrently --success=all --kill-others-on-fail \"npm run chain\" \"npm run ipfs\" \"npm run deploy:auto\" \"vite\"",
    "chain": "npx hardhat node",
    "chain:deploy": "npx hardhat run scripts/deploy-local.cjs --network localhost",
    "deploy:auto": "node scripts/dev-auto-deploy.cjs",
    "ipfs": "node scripts/local-ipfs-server.cjs",
    "build": "vite build",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy:amoy": "npx hardhat run scripts/deploy.cjs --network polygonAmoy"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.91.0",
    "@wagmi/connectors": "^0.3.6",
    "axios": "^1.11.0",
    "buffer": "^6.0.3",
    "eventemitter3": "^4.0.7",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "react-toastify": "^9.1.2",
    "recharts": "^3.6.0",
    "wagmi": "^0.12.18"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0-beta.0",
    "autoprefixer": "^10.4.14",
    "chai": "^4.5.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "ethers": "5.7.2",
    "hardhat": "^2.26.3",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.1",
    "vite": "^4.3.0"
  }
}
